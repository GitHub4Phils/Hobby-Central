<div class="main">
  <div class="row">
    <div class="col s12">
      <h1>Welcome to Hobby Central</h1>
    </div>
  </div>
  <div class="row">
    <div class="col s12">
      <h2>What would you like to learn today</h2>
    </div>
  </div>
  <!-- Category Selection -->
  <div id="dropdown1" class="row">
    <div class="input-field category col s6 offset-s3">
      <select id="category" onchange="selectCategory()">
        {{#each hobbies}}
          <option value="{{this.category}}">{{this.category}}</option>
        {{/each}}
      </select>
    </div>
  </div>
  <!-- Hobby List Selection -->
  <div id="dropdown2" class="row">
    <div class="input-field hobby-list col s6 offset-s3">
      <select id="hobby-list" onchange="selectFromHobbyList()">
        {{#each hobbies}}
          <option value="{{this.id}}">{{this.name}}</option>
        {{/each}}
      </select>
    </div>
  </div>
  <!-- Directions -->
  <div id="directions" class="row">
    <div class="col s10 offset-s1">
      <!-- Display directions here -->
      <div class="list-directions">Directions
        {{#each hobbies}}
          <div>{{this.materials}}</div>
          <div>{{this.instructions}}</div>
          <div>{{this.images}}</div>
          <div>{{this.videos}}</div>
        {{/each}}
      </div>
    </div>
  </div>
</div>
<!-- JavaScript -->
<script type="text/javascript" src="assets/js/all.js"></script>
